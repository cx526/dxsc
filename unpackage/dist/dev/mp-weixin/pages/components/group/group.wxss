.user-info {
  height: 210rpx;
  background: #FED940;
  box-sizing: border-box;
  padding: 26rpx;
  color: #4E4B43;
  font-size: 32rpx;
  position: relative;
  z-index: 10;
}
.user-info .user {
    margin-right: 20rpx;
}
.group-box {
  box-sizing: border-box;
  padding: 0 26rpx;
}
.group-box .group {
    background: #fff;
    box-sizing: border-box;
    border-radius: 12rpx;
    box-shadow: 0 0 12rpx #999;
    position: relative;
    top: -100rpx;
    z-index: 20;
}
.group-box .group .group-item {
      box-sizing: border-box;
      padding: 12rpx 0;
}
.group-box .group .group-item .group-name {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
                justify-content: center;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        color: #3F3F3F;
        font-size: 32rpx;
}
.group-box .group .group-item .group-name image {
          width: 30rpx;
          height: 30rpx;
}
.group-box .group .group-item .group-main {
        box-sizing: border-box;
        padding: 26rpx 26rpx 0 26rpx;
}
.group-box .group .group-item .group-main .main {
          box-sizing: border-box;
          padding-bottom: 24rpx;
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
          border-bottom: 1px solid #EEEEEE;
}
.group-box .group .group-item .group-main .main .group-list {
            box-sizing: border-box;
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            -webkit-box-orient: vertical;
            -webkit-box-direction: normal;
            -webkit-flex-direction: column;
                    flex-direction: column;
            -webkit-box-pack: center;
            -webkit-justify-content: center;
                    justify-content: center;
            -webkit-box-flex: 1;
            -webkit-flex: 1;
                    flex: 1;
            -webkit-box-align: center;
            -webkit-align-items: center;
                    align-items: center;
            font-size: 26rpx;
}
.group-box .group .group-item .group-main .main .group-list .name {
              color: #999999;
              margin-top: 6rpx;
}
.group-box .group .group-item .group-main .main .group-list:nth-child(1) {
            border-right: 1px solid #EEEEEE;
}
.group-box .group .group-item .group-main .main .group-list:nth-child(1) .number {
              color: #FF0000;
}

