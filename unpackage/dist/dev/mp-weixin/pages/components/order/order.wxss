.nav-box {
  box-sizing: border-box;
  line-height: 90rpx;
  height: 90rpx;
  background: #fff;
}
.nav-box .nav {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    border-bottom: 1px solid #E5E5E5;
}
.nav-box .nav .nav-item {
      box-sizing: border-box;
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      text-align: center;
      font-size: 30rpx;
      color: #444444;
      border-right: 1px solid #E5E5E5;
}
.nav-box .nav .nav-item:nth-child(5) {
      border-right: 0;
}
.nav-box .nav .nav-item.active {
      color: #B4302D;
}
.goods-box {
  box-sizing: border-box;
  margin-top: 20rpx;
  background: #fff;
  border-top: 1px solid #E5E5E5;
}
.goods-box .goods {
    box-sizing: border-box;
}
.goods-box .goods .goods-title {
      box-sizing: border-box;
      padding: 0 30rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      font-size: 24rpx;
      color: #AAAAAA;
      border-bottom: 1px solid #E5E5E5;
      line-height: 70rpx;
}
.goods-box .goods .goods-title text:nth-child(1) {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
}
.goods-box .goods .product {
      box-sizing: border-box;
      padding: 30rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      border-bottom: 1px solid #E5E5E5;
}
.goods-box .goods .product .product-img {
        width: 140rpx;
        height: 140rpx;
}
.goods-box .goods .product .product-img image {
          width: 100%;
          height: 100%;
}
.goods-box .goods .product .product-title {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        box-sizing: border-box;
        padding-left: 30rpx;
        padding-right: 48rpx;
}
.goods-box .goods .product .product-title .title {
          font-size: 30rpx;
          color: #444444;
}
.goods-box .goods .product .product-title .params {
          font-size: 24rpx;
          color: #AAAAAA;
}
.goods-box .goods .product .product-price {
        box-sizing: border-box;
}
.goods-box .goods .product .product-price .price {
          font-size: 30rpx;
          color: #000;
}
.goods-box .goods .product .product-price .number {
          font-size: 24rpx;
          color: #AAAAAA;
          text-align: right;
}
.goods-box .goods .total {
      box-sizing: border-box;
      padding: 0 30rpx;
      font-size: 24rpx;
      height: 136rpx;
      border-bottom: 1px solid #E5E5E5;
      padding-bottom: 18rpx;
      padding-top: 20rpx;
      text-align: right;
}
.goods-box .goods .total view:nth-child(2) {
        box-sizing: border-box;
        margin-top: 20rpx;
        font-size: 24rpx;
}
.goods-box .goods .total view:nth-child(2) text {
          display: inline-block;
          box-sizing: border-box;
          border: 1px solid #f00;
          width: 120rpx;
          height: 44rpx;
          line-height: 44rpx;
          text-align: center;
}
.goods-box .goods .total view:nth-child(2) text:nth-child(1) {
          margin-right: 14rpx;
          border: 1px solid #DDDDDD;
          color: #9B9B9B;
}
.goods-box .goods .total view:nth-child(2) text:nth-child(2) {
          border: 1px solid #B4302D;
          color: #B4302D;
}

