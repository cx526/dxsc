.vip-box {
  box-sizing: border-box;
  padding: 14rpx 42rpx 30rpx 42rpx;
}
.vip-box .vip-banner {
    box-sizing: border-box;
    padding-bottom: 30rpx;
}
.vip-box .vip-banner image {
      width: 100%;
      height: 200rpx;
      display: block;
}
.vip-box .vip-goods {
    box-sizing: border-box;
}
.vip-box .vip-goods .goods-list {
      box-sizing: border-box;
      width: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      white-space: nowrap;
}
.vip-box .vip-goods .goods-list .goods {
        -webkit-flex-shrink: 0;
                flex-shrink: 0;
        box-sizing: border-box;
        margin-right: 12rpx;
        box-sizing: border-box;
        width: calc(32% - 12rpx);
}
.vip-box .vip-goods .goods-list .goods image {
          display: block;
          width: 100%;
          height: 208rpx;
}
.vip-box .vip-goods .goods-list .goods .goods-title {
          box-sizing: border-box;
          width: 100%;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
          color: #0F0F0F;
          font-size: 23rpx;
          margin-top: 14rpx;
}
.vip-box .vip-goods .goods-list .goods .goods-price {
          box-sizing: border-box;
          font-weight: 700;
          font-size: 24rpx;
          margin-top: 8rpx;
}
.vip-box .vip-goods .goods-list .goods .goods-price .new-price, .vip-box .vip-goods .goods-list .goods .goods-price .new-unit {
            color: #35B9B9;
}
.vip-box .vip-goods .goods-list .goods .goods-price .new-unit, .vip-box .vip-goods .goods-list .goods .goods-price .old-unit {
            font-weight: normal;
}
.vip-box .vip-goods .goods-list .goods .goods-price .old-price, .vip-box .vip-goods .goods-list .goods .goods-price .old-unit {
            color: #000;
}
.vip-box .vip-goods .goods-list .goods .goods-price .old-unit {
            margin-left: 8rpx;
}
.vip-box .vip-goods .goods-list .goods:last-child {
        margin-right: 0;
}
.vip-box .vip-get {
    height: 164rpx;
    box-sizing: border-box;
    margin-top: 30rpx;
}
.vip-box .vip-get image {
      display: block;
      height: 100%;
      width: 100%;
}
.active {
  text-decoration: line-through;
  font-weight: normal !important;
  color: #727272 !important;
}

