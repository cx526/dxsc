.account-title {
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 38rpx;
  font-size: 28rpx;
  padding-bottom: 0;
}
.account-title image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 18rpx;
}
.account-number {
  box-sizing: border-box;
  padding: 50rpx 38rpx 0 38rpx;
}
.account-number .account {
    font-size: 28rpx;
    color: #636363;
}
.account-number .number {
    box-sizing: border-box;
    border-bottom: 1px solid #F6F5F3;
    line-height: 80rpx;
    height: 80rpx;
    margin-top: 16rpx;
}
.account-number .number input {
      box-sizing: border-box;
      display: block;
      height: 100%;
}
.account-number .notice {
    box-sizing: border-box;
    background: #FEF7E5;
    color: #CCA02F;
    font-size: 26rpx;
    padding: 30rpx 36rpx;
    margin-top: 28rpx;
    line-height: 40rpx;
}
.pay-type {
  box-sizing: border-box;
  padding: 0 38rpx;
  margin-top: 70rpx;
}
.pay-type .title {
    font-size: 26rpx;
    color: #888888;
    margin-bottom: 24rpx;
}
.pay-type .type-list {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.pay-type .type-list .type-item {
      box-sizing: border-box;
      font-size: 30rpx;
      background: #F6F5F0;
      padding: 24rpx 36rpx;
      color: #D09B09;
      border-radius: 12rpx;
      margin-right: 12rpx;
}
.pay-type .type-list .type-item.typeActive {
      font-weight: 700;
      background: #F8E7BB;
      color: #6D3E06;
}
.pay-face {
  box-sizing: border-box;
  padding: 0 38rpx;
  margin-top: 60rpx;
}
.pay-face .title {
    font-size: 26rpx;
    color: #888888;
    margin-bottom: 24rpx;
}
.pay-face .face-list {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
.pay-face .face-list .face-item {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      width: calc(33.33% - 8rpx);
      background: #F6F5F0;
      box-sizing: border-box;
      font-size: 26rpx;
      padding: 38rpx 0;
      margin-right: 12rpx;
      margin-bottom: 12rpx;
}
.pay-face .face-list .face-item .time {
        color: #755023;
        font-weight: 700;
        margin-bottom: 18rpx;
        line-height: 0;
}
.pay-face .face-list .face-item .newPrice {
        font-size: 36rpx;
        font-weight: 700;
        color: #CF9808;
        margin-bottom: 14rpx;
}
.pay-face .face-list .face-item .newPrice text:nth-child(1) {
          font-size: 28rpx;
}
.pay-face .face-list .face-item .oldPrice {
        color: #AB9D86;
        text-decoration: line-through;
        line-height: 0;
        font-size: 22rpx;
}
.pay-face .face-list .face-item:nth-child(3n) {
      margin-right: 0;
}
.pay-face .face-list .face-item.faceActive {
      background: #F8E7BB !important;
}
.btn {
  box-sizing: border-box;
  padding: 30rpx 38rpx;
}
.btn button {
    background: #FED940;
    color: #FFFFFF;
}

