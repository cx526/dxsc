.tab-box {
  width: 100%;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.tab-box .item {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    margin: 0 10rpx;
    box-sizing: content-box;
    line-height: 80rpx;
    font-size: 32rpx;
    height: 80rpx;
    text-align: center;
    color: #888;
}
.tab-box .focus {
    border-bottom: 5rpx solid #fed940;
}
.goods-box {
  width: 100%;
  overflow: hidden;
}
.goods-box .item {
    padding: 20rpx;
    box-sizing: border-box;
    width: 142rpx;
    height: 142rpx;
    float: left;
    overflow: hidden;
}
.goods-box .item image {
      width: 100%;
      height: 100%;
}
.title-box {
  box-sizing: border-box;
  padding: 30rpx;
  height: 200rpx;
}
.title-box .title {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.title-box .title .title-show {
      width: 142rpx;
      height: 142rpx;
}
.title-box .title .title-show image {
        width: 100%;
        height: 100%;
}
.title-box .title .title-context {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      margin-left: 26rpx;
}
.title-box .title .title-context .title-status {
        color: #B53431;
        font-size: 30rpx;
}
.title-box .title .title-context .title-express {
        color: #AAAAAA;
        font-size: 26rpx;
        margin-top: 8rpx;
}
.title-box .title .title-context .title-service {
        color: #AAAAAA;
        font-size: 26rpx;
        margin-top: 8rpx;
}
.cut-line {
  background: #EFEFF4;
  height: 18rpx;
}
.express-after {
  box-sizing: border-box;
  line-height: 90rpx;
  color: #909090;
  font-size: 30rpx;
  border-bottom: 1px solid #EAEAEA;
  padding-left: 30rpx;
}
.express-status {
  box-sizing: border-box;
}
.express-status .status {
    box-sizing: border-box;
    padding: 40rpx;
}
.express-status .status .express-item {
      box-sizing: border-box;
      height: 145rpx;
}
.express-status .status .express-item .item {
        position: relative;
        box-sizing: border-box;
        padding-bottom: 80rpx;
        border-left: 1px solid #DDDDDD;
}
.express-status .status .express-item .item .message {
          font-size: 30rpx;
          color: #9B9B9B;
}
.express-status .status .express-item .item .message .circle {
            display: inline-block;
            width: 40rpx;
            height: 40rpx;
            background: #9B9B9B;
            border-radius: 50%;
            position: absolute;
            left: -20rpx;
            top: 0;
            z-index: 2;
}
.express-status .status .express-item .item .time {
          font-size: 24rpx;
          color: #AFAFAF;
          margin-top: 18rpx;
}
.express-status .status .express-item .item:last-child {
        border-left: 0;
}
.express-status .status .express-item .active {
        color: #B4302D !important;
}
.express-status .status .express-item .bgActive {
        color: #B4302D !important;
}

