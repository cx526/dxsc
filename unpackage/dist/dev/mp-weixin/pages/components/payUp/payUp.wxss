page {
  background: #EFEFF4;
}
.pay-way {
  box-sizing: border-box;
  line-height: 70rpx;
  border-bottom: 1px solid #E4E4E4;
  padding: 0 30rpx;
  background: #fff;
}
.pay-way .pay {
    box-sizing: border-box;
    font-size: 28rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    color: #AAAAAA;
}
.pay-way .pay view {
      box-sizing: border-box;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.pay-way .pay view image {
        width: 30rpx;
        height: 30rpx;
}
.pay-money {
  box-sizing: border-box;
  height: 200rpx;
  padding: 35rpx;
  font-size: 28rpx;
  color: #AAAAAA;
  border-bottom: 1px solid #E4E4E4;
  background: #fff;
}
.deal {
  box-sizing: border-box;
  background: #Fff;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #AAAAAA;
  padding-left: 30rpx;
}
.pay-choose {
  box-sizing: border-box;
  padding: 60rpx 90rpx 80rpx 90rpx;
}
.pay-choose .choose {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
.pay-choose .choose .choose-item {
      box-sizing: border-box;
      width: calc(50% - 12rpx);
      border: 1px solid #FED940;
      background: #fff;
      padding: 24rpx;
      border-radius: 12rpx;
      margin-bottom: 36rpx;
}
.pay-choose .choose .choose-item .face {
        font-size: 40rpx;
        color: #B4302D;
        text-align: center;
}
.pay-choose .choose .choose-item .discount {
        font-size: 24rpx;
        color: #B4302D;
        text-align: center;
}
.pay-choose .choose .choose-item:nth-child(2n) {
      margin-left: 12rpx;
}
.pay-choose .choose .choose-item:nth-child(2n-1) {
      margin-left: 12rpx;
}
.btn {
  box-sizing: border-box;
  padding: 36rpx;
}
.active {
  background: #FED940 !important;
  color: #000 !important;
}
.address-item {
  box-sizing: border-box;
  padding: 30rpx;
  border-bottom: 1px solid #E7E7E7;
  font-size: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  background: #fff;
}
.address-item view {
    width: 165rpx;
}
.address-item view text {
      color: #000;
}
.address-item input {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
}
.address-item.default {
  margin-top: 20rpx;
}

