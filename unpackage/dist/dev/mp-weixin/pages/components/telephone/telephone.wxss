.register {
  box-sizing: border-box;
}
.register .logo {
    width: 220rpx;
    height: 170rpx;
    margin: 0 auto;
    padding-top: 80rpx;
}
.register .logo image {
      width: 100%;
      height: 100%;
}
.register .choose {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.register .choose view {
      box-sizing: border-box;
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      text-align: center;
}
.register .choose view:nth-child(1) {
      color: #5E5A5A;
      font-size: 40rpx;
}
.register .choose view:nth-child(2) {
      font-size: 50rpx;
      color: #C8C7CC;
}
.register .form-list {
    box-sizing: border-box;
    margin-top: 80rpx;
}
.register .form-list .form-item {
      box-sizing: border-box;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      padding: 0 10%;
      height: 100rpx;
      line-height: 100rpx;
      position: relative;
}
.register .form-list .form-item image {
        width: 50rpx;
        height: 50rpx;
        margin-right: 24rpx;
}
.register .form-list .form-item input {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        box-sizing: border-box;
        border-bottom: 1px solid #C8C7CC;
}
.register .form-list .form-item .QRcode {
        border: 1px solid #C8C7CC;
        position: absolute;
        right: 72rpx;
        background: #fff;
        border-radius: 48rpx;
        color: #C8C7CC;
        font-size: 24rpx;
        top: 0;
}
.register .btn {
    position: absolute;
    bottom: 110rpx;
    left: 0;
    width: 100%;
    box-sizing: border-box;
}
.register .btn .login, .register .btn .register {
      box-sizing: border-box;
      height: 90rpx;
}
.register .btn .login button, .register .btn .register button {
        width: 60%;
        height: 100%;
        text-align: center;
        font-size: 32rpx;
        color: #C8C7CC;
        border-radius: 60rpx;
}
.register .btn .login {
      margin-bottom: 24rpx;
}
.register .btn .login button {
        box-sizing: border-box;
        border: 1px solid #fff;
}
.register .btn .login button:after {
        border: none;
}
.register .btn .register button {
      background: #E64340;
      color: #fff;
}
.placeholder {
  font-size: 28rpx;
  color: #C8C7CC;
}

