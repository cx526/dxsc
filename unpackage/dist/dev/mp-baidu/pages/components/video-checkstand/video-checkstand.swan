<view><view class="pay"><text>需要支付</text><text style="color:#f00;">{{"￥"+add}}</text></view><block s-if="{{userPay.discount_num}}"><view class="pay" style="margin-top:30rpx;"><text>折扣</text><text style="color:#f00;">{{"￥"+userPay.discount_num}}</text></view></block><view class="pay-box"><view class="pay-item"><text>{{"现金券：￥"+res.n_money}}</text><input style="text-align:right;" type="number" placeholder="请输入使用额度" placeholder-style="color:#ccc" data-event-opts="{{[['input',[['__set_model',['','cash','$event',[]]],['money',['$event']]]]]}}" value="{{cash}}" bindinput="__e"/></view><view class="pay-item"><text>{{"余额：￥"+res.balance}}</text><input style="text-align:right;" type="number" placeholder="请输入使用余额" placeholder-style="color:#ccc" data-event-opts="{{[['input',[['__set_model',['','balance','$event',[]]],['changeBalance',['$event']]]]]}}" value="{{balance}}" bindinput="__e"/></view></view><view class="way"><view class="title">选择支付方式</view><view class="item"><view><image src="{{$src+'/images/payment.png'}}" mode></image><text>余额支付</text></view><radio style="transform:scale(0.7);" color="#FED940" checked="{{balanceWay}}" data-event-opts="{{[['tap',[['handleBalance',['$event']]]]]}}" bindtap="__e"></radio></view><view class="item"><view><image src="{{$src+'/images/wx-pay.png'}}" mode></image><text>微信支付</text></view><radio style="transform:scale(0.7);" color="#FED940" checked="{{payWay}}" data-event-opts="{{[['tap',[['handlePayWay',['$event']]]]]}}" bindtap="__e"></radio></view></view><block s-if="{{passwordWin}}"><view class="pay-item"><input type="password" placeholder="请输入支付密码" placeholder-style="color: #C0C0C0" data-event-opts="{{[['input',[['getUserPassword',['$event']]]]]}}" bindinput="__e"/></view></block><view data-event-opts="{{[['tap',[['handleOrder',['$event']]]]]}}" class="btn" bindtap="__e"><button style="font-size:30rpx;background:#FED940;color:#fff;">支付</button></view></view>