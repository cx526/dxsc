<view><view class="pay"><text>需要支付</text><block s-if="{{!sum}}"><text style="color:#f00;">{{"￥"+payprice}}</text></block><block s-else><text style="color:#f00;">{{sum}}</text></block></view><view class="pay" style="margin-top:30rpx;"><text>折扣</text><text style="color:#f00;">{{"￥"+discountPrince}}<block s-if="{{enough==0}}"><label class="_span">(折扣券不足)</label></block></text></view><view class="pay-box"><view class="pay-item"><text>{{"现金券：￥"+n_money}}</text><input style="text-align:right;" type="number" placeholder="请输入使用额度" placeholder-style="color:#ccc" data-event-opts="{{[['input',[['__set_model',['','cash','$event',[]]],['money',['$event']]]]]}}" value="{{cash}}" bindinput="__e"/></view><view class="pay-item"><text>{{"使用余额："+balance}}</text><input style="text-align:right;" type="number" placeholder="请输入使用余额" placeholder-style="color:#ccc" data-event-opts="{{[['input',[['__set_model',['','remaining','$event',[]]],['changeBalance',['$event']]]]]}}" value="{{remaining}}" bindinput="__e"/></view></view><view class="way"><view class="title">在线支付方式</view><view class="item"><view><image src="{{$src+'/images/wx-pay.png'}}" mode></image><text>微信支付</text></view><radio style="transform:scale(0.7);" checked="{{checked}}" color="#FED940" data-event-opts="{{[['tap',[['changeChecked',['$event']]]]]}}" bindtap="__e"></radio></view></view><view class="btn"><button data-event-opts="{{[['tap',[['createOrderOffline']]]]}}" style="font-size:30rpx;background:#FED940;color:#fff;" bindtap="__e">微信支付</button></view></view>