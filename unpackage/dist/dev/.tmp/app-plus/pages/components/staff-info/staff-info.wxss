.shop-list {
  box-sizing: border-box;
}
.shop-list .shop-item {
    padding: 16rpx 40rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #EFEFF4;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.shop-list .shop-item .shop-img {
      width: 140rpx;
      height: 140rpx;
      margin-right: 24rpx;
      -webkit-flex-shrink: 0;
              flex-shrink: 0;
}
.shop-list .shop-item .shop-img image {
        width: 100%;
        height: 100%;
}
.shop-list .shop-item .shop-context {
      font-size: 20rpx;
}
.shop-list .shop-item .shop-context .shop-info {
        box-sizing: border-box;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        overflow: hidden;
        -webkit-flex-wrap: nowrap;
                flex-wrap: nowrap;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        font-size: 20rpx;
}
.shop-list .shop-item .shop-context .shop-info .name {
          font-size: 26rpx;
          margin-right: 10rpx;
          -webkit-flex-shrink: 0;
                  flex-shrink: 0;
}
.shop-list .shop-item .shop-context .order {
        margin-top: 12rpx;
}
.shop-list .shop-item .shop-context .params {
        box-sizing: border-box;
}
.shop-list .shop-item .shop-context .params text {
          margin-right: 10rpx;
}
.shop-list .shop-item .shop-context .params text:last-child {
          margin-right: 0;
}
