page {
  background: #EFEFF4;
}
.goods-box {
  box-sizing: border-box;
  margin-top: 20rpx;
  background: #fff;
  border-top: 1px solid #E5E5E5;
}
.goods-box .goods {
    box-sizing: border-box;
}
.goods-box .goods .product {
      box-sizing: border-box;
      padding: 30rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      border-bottom: 1px solid #E5E5E5;
}
.goods-box .goods .product .product-img {
        width: 140rpx;
        height: 140rpx;
}
.goods-box .goods .product .product-img image {
          width: 100%;
          height: 100%;
}
.goods-box .goods .product .product-title {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        box-sizing: border-box;
        padding-left: 30rpx;
        padding-right: 48rpx;
}
.goods-box .goods .product .product-title .title {
          font-size: 30rpx;
          color: #444444;
}
.goods-box .goods .product .product-title .params {
          font-size: 24rpx;
          color: #AAAAAA;
}
.goods-box .goods .product .product-price {
        box-sizing: border-box;
}
.goods-box .goods .product .product-price .price {
          font-size: 30rpx;
          color: #000;
}
.goods-box .goods .product .product-price .number {
          font-size: 24rpx;
          color: #AAAAAA;
          text-align: right;
}
.goods-box:nth-child(1) {
  margin-top: 0;
}
.appraise-box {
  box-sizing: border-box;
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}
.appraise-box .appraise {
    box-sizing: border-box;
}
.appraise-box .appraise textarea {
      width: 100%;
      box-sizing: border-box;
      font-size: 28rpx;
}
.appraise-box .appraise .show-photo {
      box-sizing: border-box;
      width: 164rpx;
      height: 164rpx;
      border: 1px solid #E5E5E5;
      text-align: center;
      padding: 32rpx 0;
}
.appraise-box .appraise .show-photo image {
        width: 50rpx;
        height: 45rpx;
}
.appraise-box .appraise .show-photo view {
        color: #D8D8D8;
        font-size: 24rpx;
        text-align: center;
}
.btn {
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}

