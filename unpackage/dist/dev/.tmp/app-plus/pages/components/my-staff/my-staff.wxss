page {
  background: #EFEFF4;
}
.search-box {
  box-sizing: border-box;
  background: #fff;
  padding: 20rpx 10% 30rpx 10%;
}
.search-box .search {
    box-sizing: border-box;
    height: 70rpx;
    line-height: 70rpx;
    background: #EFEFF4;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding-left: 24rpx;
    border-radius: 48rpx;
}
.search-box .search input {
      height: 100%;
}
.search-box .search image {
      width: 40rpx;
      height: 40rpx;
      margin-right: 24rpx;
}
.group-box {
  box-sizing: border-box;
  padding: 0 10% 20rpx 10%;
  background: #fff;
  border-bottom: 1px solid #EDEDED;
}
.group-box .group {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.group-box .group .group-item {
      width: 50%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      font-size: 28rpx;
}
.group-box .group .group-item text:nth-child(1) {
        color: #ACACAC;
        margin-bottom: 20rpx;
}
.group-box .group .group-item text:nth-child(2) {
        color: #7D7D7D;
}
.group-list {
  box-sizing: border-box;
  background: #fff;
}
.group-list .group-title {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    font-size: 32rpx;
    padding-right: 80rpx;
    line-height: 80rpx;
    color: #B9B9B9;
}
.group-list .group-title .number {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      text-align: center;
}
.group-list .group-title .name {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      text-align: center;
}
.group-list .group-title .message {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      text-align: center;
}
.group-list .group-title image {
      width: 40rpx;
      height: 40rpx;
      position: absolute;
      top: 50%;
      -webkit-transform: translateY(-50%);
              transform: translateY(-50%);
      right: 20rpx;
}
.hidden {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.spcial {
  border-bottom: 1px solid #F0F0F5;
  position: relative;
}

