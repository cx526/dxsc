page {
  background: #F6F6F6;
}
.nav {
  box-sizing: border-box;
  padding-right: 80rpx;
  padding-left: 20rpx;
  position: relative;
}
.nav .scroll {
    width: 100%;
    box-sizing: border-box;
    white-space: nowrap;
    font-size: 28rpx;
    line-height: 80rpx;
}
.nav .scroll view {
      display: inline-block;
      color: #2C2C2C;
      margin-right: 40rpx;
}
.nav .scroll view:last-child {
      margin-right: 0;
}
.nav .menu {
    box-sizing: border-box;
}
.nav .menu image {
      width: 40rpx;
      height: 40rpx;
      position: absolute;
      right: 20rpx;
      top: 50%;
      -webkit-transform: translateY(-50%);
              transform: translateY(-50%);
      z-index: 90;
}
.banner {
  height: 300rpx;
  width: 100%;
}
.banner image {
    width: 100%;
    height: 100%;
}
.recommend {
  box-sizing: border-box;
}
.recommend .title {
    font-size: 34rpx;
    font-weight: 700;
    text-align: left;
    line-height: 120rpx;
    position: relative;
    padding-left: 30rpx;
    box-sizing: border-box;
}
.recommend .title .line {
      width: 130rpx;
      height: 20rpx;
      background: #FFD323;
      position: absolute;
      z-index: 90;
      left: 94rpx;
      bottom: 38rpx;
      -webkit-transform: translateX(-50%);
              transform: translateX(-50%);
      border-radius: 6rpx;
}
.recommend .list {
    box-sizing: border-box;
    padding: 0 30rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
.recommend .list .list-item {
      box-sizing: border-box;
      width: 49%;
}
.recommend .list .list-item image {
        width: 100%;
        height: 330rpx;
}
.recommend .list .list-item .main {
        box-sizing: border-box;
        padding: 20rpx 18rpx;
}
.recommend .list .list-item .main .list-title {
          font-size: 24rpx;
          color: #505050;
          text-align: left;
          line-height: 32rpx;
          overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
}
.recommend .list .list-item .main .list-price {
          box-sizing: border-box;
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
          -webkit-box-orient: vertical;
          -webkit-box-direction: normal;
          -webkit-flex-direction: column;
                  flex-direction: column;
          margin-top: 28rpx;
          line-height: 26rpx;
}
.recommend .list .list-item .main .list-price .new {
            color: #0E0E0E;
            font-size: 26rpx;
            font-weight: 700;
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            -webkit-box-align: center;
            -webkit-align-items: center;
                    align-items: center;
}
.recommend .list .list-item .main .list-price .new .member {
              display: inline-block;
              background: #333333;
              box-sizing: border-box;
              padding: 8rpx 12rpx;
              margin-left: 10rpx;
              color: #BFB2A3;
              font-weight: normal;
              font-size: 24rpx;
              border-radius: 16rpx;
}
.recommend .list .list-item .main .list-price .old {
            margin-top: 20rpx;
            color: #999;
            font-size: 24rpx;
}
.recommend .list .list-item .main .list-price .old text:nth-child(2) {
              text-decoration: line-through;
}
::-webkit-scrollbar {
  display: none;
  width: 0 !important;
  height: 0 !important;
  -webkit-appearance: none;
  background: transparent;
}
.active {
  color: #f00 !important;
}
.none {
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 26rpx;
  text-align: center;
  color: #666;
}

