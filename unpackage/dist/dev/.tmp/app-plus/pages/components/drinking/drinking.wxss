.nav-box {
  box-sizing: border-box;
  background: #fff;
}
.nav-box scroll-view {
    width: 100%;
    white-space: nowrap;
    box-sizing: border-box;
    padding: 0 20rpx;
    line-height: 80rpx;
}
.nav-box scroll-view view {
      display: inline-block;
      margin-right: 36rpx;
      font-size: 28rpx;
      color: #333;
}
.nav-box scroll-view view text.active {
        border-bottom: 1px solid #f00;
        padding-bottom: 16rpx;
}
.nav-box scroll-view view:last-child {
      margin-right: 0;
}
.product-box {
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}
.product-box .product {
    box-sizing: border-box;
}
.product-box .product .product-item {
      box-sizing: border-box;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      background: #fff;
      padding: 24rpx 20rpx;
      margin-bottom: 18rpx;
}
.product-box .product .product-item .product-img {
        -webkit-flex-shrink: 0;
                flex-shrink: 0;
        width: 160rpx;
        height: 160rpx;
        background: #f1f1f1;
        margin-right: 28rpx;
}
.product-box .product .product-item .product-main {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -webkit-flex-direction: column;
                flex-direction: column;
        font-size: 28rpx;
}
.product-box .product .product-item .product-main text:nth-child(1) {
          color: #333;
}
.product-box .product .product-item .product-main text:nth-child(2) {
          font-size: 24rpx;
          color: #999;
          margin-top: 8rpx;
}
.product-box .product .product-item .product-main text:nth-child(3) {
          border: 1px solid #f00;
          width: 80rpx;
          font-size: 22rpx;
          text-align: center;
          border-radius: 6rpx;
          margin-top: 8rpx;
          color: #f00;
}
.product-box .product .product-item .product-main text:nth-child(4) {
          font-size: 24rpx;
          color: #333;
          margin-top: 12rpx;
}
.product-box .product .product-item .product-main text:nth-child(5) {
          color: #f00;
          margin-top: 8rpx;
          font-size: 24rpx;
}

