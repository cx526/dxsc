page {
  background: #EFEFF4;
}
.nav-box {
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.nav-box .nav {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    line-height: 90rpx;
    font-size: 28rpx;
}
.nav-box .nav .nav-item {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      text-align: center;
      color: #5C5C5C;
}
.nav-box .nav .nav-item text {
        padding-bottom: 20rpx;
}
.nav-box .nav .nav-item text.navActive {
        border-bottom: 3px solid #323232;
        color: #474747;
}
.home-box {
  box-sizing: border-box;
  background: #fff;
}
.home-box .home-nav {
    box-sizing: border-box;
}
.home-box .home-nav .nav {
      box-sizing: border-box;
      padding: 32rpx 24rpx;
}
.home-box .home-nav .nav-title {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.home-box .home-nav .nav-title text:nth-child(1) {
        font-size: 28rpx;
}
.home-box .home-nav .nav-title view {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
}
.home-box .home-nav .nav-title view image {
          width: 30rpx;
          height: 30rpx;
}
.home-box .home-nav .nav-title view text {
          color: #A1A1A1;
          font-size: 24rpx;
}
.home-box .home-nav .nav-title text:nth-child(2) {
        font-size: 24rpx;
        color: #A1A1A1;
}
.home-box .home-nav .nav-main {
      box-sizing: border-box;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      border: 1px solid #E7E7E7;
      line-height: 70rpx;
      font-size: 26rpx;
      color: #747474;
      border-radius: 60rpx;
      margin-top: 32rpx;
}
.home-box .home-nav .nav-main view {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        text-align: center;
        border-right: 1px solid #E7E7E7;
}
.home-box .home-nav .nav-main view:first-child {
        border-top-left-radius: 60rpx;
        border-bottom-left-radius: 60rpx;
}
.home-box .home-nav .nav-main view:last-child {
        border-right: 0;
        border-top-right-radius: 60rpx;
        border-bottom-right-radius: 60rpx;
}
.home-box .home-nav .nav-main .homeActive {
        background: #F9EFC6;
        color: #000;
}
.home-box .context-box {
    box-sizing: border-box;
    background: #fff;
}
.home-box .context-box .context {
      box-sizing: border-box;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-flex-wrap: wrap;
              flex-wrap: wrap;
}
.home-box .context-box .context .context-item {
        box-sizing: border-box;
        width: 50%;
        padding: 40rpx 0 52rpx 30rpx;
        border-top: 1px solid #F2F2F6;
        border-right: 1px solid #F2F2F6;
}
.home-box .context-box .context .context-item .title {
          font-size: 28rpx;
          color: #535353;
}
.home-box .context-box .context .context-item .des {
          box-sizing: border-box;
}
.home-box .context-box .context .context-item .des .unit {
            font-size: 28rpx;
            color: #444444;
            margin-left: 12rpx;
}
.home-box .context-box .context .context-item .des .number {
            font-size: 40rpx;
            font-weight: 700;
}

