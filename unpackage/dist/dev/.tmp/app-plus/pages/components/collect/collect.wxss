.check-title {
  box-sizing: border-box;
  padding: 0 30rpx;
  line-height: 70rpx;
  border-bottom: 1px solid #E5E5E5;
}
.check-title .check {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.check-title .check .radio {
      font-size: 24rpx;
      color: #CCC;
}
.check-title .check .edit {
      color: #A4A4A4;
      font-size: 20rpx;
}
.collect-box {
  box-sizing: border-box;
}
.collect-box .collect {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.collect-box .collect .collect-item {
      padding-bottom: 24rpx;
      box-sizing: border-box;
      width: 50%;
      position: relative;
}
.collect-box .collect .collect-item .radio {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 99;
}
.collect-box .collect .collect-item .img {
        box-sizing: border-box;
        width: 100%;
        height: 300rpx;
}
.collect-box .collect .collect-item .img image {
          width: 100%;
          height: 100%;
          display: block;
}
.collect-box .collect .collect-item .title {
        font-size: 30rpx;
        box-sizing: border-box;
        color: #444444;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
}
.collect-box .collect .collect-item .price {
        font-size: 26rpx;
        box-sizing: border-box;
        color: #FC3D3C;
        font-weight: 700;
        margin-right: 5px;
}
.collect-box .collect .collect-item .price text:nth-child(2) {
          font-size: 26rpx;
          color: #B0B0B0;
          text-decoration: line-through;
          margin-left: 18rpx;
}
.collect-box .collect .collect-item:nth-child(2n) {
      border-right: 0;
}

