<view><view class="pay-way"><view class="pay"><text>充值方式</text><view><picker range="{{payWay}}" range-key="name" data-event-opts="{{[['change',[['changePay',['$event']]]]]}}" bindchange="__e"><text>{{payWay[payIndex].name}}</text></picker><image src="{{$src+'/images/icon-right.png'}}" mode></image></view></view></view><view class="pay-money"><view class="money"><view>充值金额</view><block wx:if="{{levelInfo[currentIndex]}}"><view style="margin-top:40rpx;font-size:34rpx;">{{"￥"+levelInfo[currentIndex].quota}}</view></block></view></view><view class="pay-choose"><view class="choose"><block wx:for="{{levelInfo}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><block wx:if="{{index>0}}"><view data-event-opts="{{[['tap',[['act',[index]]]]]}}" class="{{['choose-item',index==currentIndex?'active':'']}}" bindtap="__e"><view class="face"><text>{{"￥"+item.quota+"元"}}</text></view><view class="discount"><text>{{"获"+item.money+"抵扣优惠券"}}</text></view></view></block></block></block></view></view><view hidden="{{!(showAddres)}}" class="address-item"><view><text>所在地区</text></view><picker value="{{selectProvince}}" range="{{province}}" range-key="province_name" data-event-opts="{{[['change',[['bindSelectProvince',['$event']]]]]}}" bindchange="__e"><block wx:if="{{province.length>1}}"><view class="uni-input">{{province[selectProvince].province_name}}</view></block></picker><picker value="{{selectCity}}" range="{{city}}" range-key="city_name" data-event-opts="{{[['change',[['bindSelectCity',['$event']]]]]}}" bindchange="__e"><block wx:if="{{city.length>0}}"><view class="uni-input">{{city[selectCity].city_name}}</view></block></picker><picker value="{{selectDistrict}}" range="{{district}}" range-key="district_name" data-event-opts="{{[['change',[['bindSelectDistrict',['$event']]]]]}}" bindchange="__e"><block wx:if="{{district.length>0}}"><view class="uni-input">{{district[selectDistrict].district_name}}</view></block></picker></view><view class="btn"><button data-event-opts=