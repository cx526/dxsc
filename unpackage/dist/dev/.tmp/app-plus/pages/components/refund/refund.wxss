.process-box {
  width: 600rpx;
  margin: 0 auto;
  padding: 40rpx 0;
  overflow: hidden;
}
.process-box .step {
    float: left;
    font-size: 26rpx;
    overflow: hidden;
}
.process-box .step .name {
      width: 100%;
      color: #ccc;
}
.process-box .step .number {
      display: inline-block;
      width: 40rpx;
      height: 40rpx;
      line-height: 40rpx;
      border-radius: 50%;
      background: #ccc;
      color: #fff;
      font-weight: bold;
      text-align: center;
      vertical-align: middle;
}
.process-box .step .line {
      display: inline-block;
      height: 2px;
      width: 120rpx;
      background: #ccc;
      vertical-align: middle;
}
.process-box .step .line-l {
      margin-right: -20rpx;
}
.process-box .step .line-r {
      margin-left: -20rpx;
}
.process-box .step1 .name {
    text-align: left;
}
.process-box .step2 .name {
    text-align: center;
}
.process-box .step3 .name {
    text-align: right;
}
.process-box .current .name {
    color: #f37872;
}
.process-box .current .number,
  .process-box .current .line {
    background: #f37872;
}
.form-box {
  border-top: 1px dashed #ccc;
}
.form-box .line {
    overflow: hidden;
    border-bottom: 1px solid #f1f1f1;
}
.form-box .line .label {
      float: left;
      width: 28%;
      color: #888;
      font-size: 30rpx;
      text-align: center;
      margin-bottom: 0px;
      line-height: 80rpx;
}
.form-box .line .input {
      float: right;
      width: 70%;
      line-height: 80rpx;
      font-size: 30rpx;
}
.form-box .line .input input {
        font-size: 30rpx;
        height: 80rpx;
        line-height: 80rpx;
}
.form-box .line .input textarea {
        width: 100%;
        height: 150rpx;
        padding: 15rpx 0;
        font-size: 30rpx;
        line-height: 50rpx;
}
.none-goods {
  margin: 40rpx 30rpx 0 30rpx;
  font-size: 32rpx;
}
.none-goods .icon-tip-circle {
    float: left;
    margin-right: 20rpx;
    font-size: 80rpx;
    color: #fff;
    font-family: "dis-font";
    font-style: normal;
    width: 100rpx;
    height: 80rpx;
    padding-bottom: 20rpx;
    border-radius: 50%;
    text-align: center;
    background-color: #45a5cf;
}
.none-goods .text {
    overflow: hidden;
}
.none-goods .text .h4 {
      margin-top: 10px;
}
.none-goods .text .ul {
      color: #999;
}
.none-goods .text .ul .li {
        margin: 0;
        padding: 0;
        vertical-align: baseline;
}
.none-goods .text .time {
      margin: 0;
      color: #999;
      font-size: 32rpx;
}
.seller-agree {
  font-size: 32rpx;
  margin: 40rpx 30rpx 0 30rpx;
}
.seller-agree .h5 {
    font-weight: bold;
    margin: 20px 0 5px 0;
    font-size: 16px;
    overflow: hidden;
}
.seller-agree .h5 .small {
      font-weight: normal;
      display: block;
      margin: 16rpx 0 20rpx 50rpx;
      color: #999;
}
.seller-agree .explanation {
    margin: 0;
    font-size: 30rpx;
}
.seller-agree .address {
    margin: 0;
    line-height: 50rpx;
    font-style: normal;
}
.seller-agree .express-form {
    margin-top: 20rpx;
}
.seller-agree .row {
    margin-bottom: 20rpx;
}
.seller-agree .label {
    display: inline;
}
.seller-agree .color-red {
    margin-right: 5px;
    color: red;
}
.seller-agree input {
    margin: 10rpx 0;
    padding: 0 10rpx;
    border: 1px solid #aaa;
}
